{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": false,
    "esModuleInterop": true,
    // "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "lib": ["esnext", "es6", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./typings/*.d.ts", "**/*.ts", "**/*.tsx"],
  // "exclude": ["node_modules"],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  }
}
